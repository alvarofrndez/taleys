{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      },
      "skipLibCheck": true,
      "strict": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}