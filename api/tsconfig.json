{
  "compilerOptions": {
    /* === Salida y estructura === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Compatibilidad con Node === */
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* === Importaciones modernas === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* === Alias de rutas === */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    /* === Errores y chequeos === */
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
